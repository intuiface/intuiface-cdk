{
    "group-pull-request-title-pattern": "chore: release ${version}",
    "bump-minor-pre-major": true,
    "bump-patch-for-minor-pre-major": true,
    "include-component-in-tag": false,
    "packages": {
        ".":
        {
            "draft": true,
            "extra-files": [
                {
                    "type": "json",
                    "path": "/libs/core/package.json",
                    "jsonpath": "$.version"
                },
                {
                    "type": "json",
                    "path": "/libs/components/package.json",
                    "jsonpath": "$.version"
                },
                {
                    "type": "json",
                    "path": "/libs/tools/schematics/custom-asset-schematics/package.json",
                    "jsonpath": "$.version"
                },
                {
                    "type": "json",
                    "path": "/libs/tools/schematics/interface-asset-schematics/package.json",
                    "jsonpath": "$.version"
                },
                {
                    "type": "json",
                    "path": "/libs/tools/schematics/interface-asset-schematics/src/create/files/package.json",
                    "jsonpath": "$.dependencies['@intuiface/core']"
                },
                {
                    "type": "json",
                    "path": "/libs/tools/schematics/custom-asset-schematics/src/create/files/packageVersions.json",
                    "jsonpath": "$['@intuiface/core']"
                },
                
                {
                    "type": "json",
                    "path": "/libs/tools/schematics/custom-asset-schematics/src/create/files/packageVersions.json",
                    "jsonpath": "$['@intuiface/components']"
                },
                {
                    "type": "json",
                    "path": "/libs/tools/schematics/custom-asset-schematics/src/create/files/packageVersions.json",
                    "jsonpath": "$['@intuiface/custom-asset']"
                }
            ]
        }
    }
}