{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/<%= IAName %>/",
    "noImplicitAny": true,
    "target": "ES2022",
    "useDefineForClassFields": false,
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop" : true,    
    "declaration": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "importHelpers": true,
  },
  "exclude": ["node_modules"],
  "include": ["src/*"]
}
