{
    "extends": "./tsconfig.json",
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "enableResourceInlining": true
    },
    "exclude": ["src/test-setup.ts", "**/*.spec.ts", "**/*.test.ts"],
    "include": ["**/*.ts"],
    "compilerOptions": {
        "target": "ES2022",
        "useDefineForClassFields": false
    }
}
